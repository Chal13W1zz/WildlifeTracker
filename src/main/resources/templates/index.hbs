{{#partial "content"}}

    <div class="row d-flex justify-content-center">
        <div class="col-1">
            <a href="/sighting/new" class="btn btn-primary text-center">+ Sighting</a>
        </div>
        </div>


<div class="container">
    {{#if allsightings}}
        {{#each allsightings}}
            <div class="card text-center mt-5">
                <div class="card-header">
                    Sighted By: {{rangerName}}
                </div>
                <div class="card-body">
                    <h5 class="card-title">Sighting Location: {{location}}</h5>

                    {{#each animalsInSighting}}

                        <p class="card-text">Animal Name:  {{animalName}} </p>
                        <p>Animal Age: {{animalAge}}</p>
                        <p>Animal Health:  {{health}}</p>
                    {{/each}}
<!--                    <a href="/animal/{{id}}" class="btn btn-primary">View Animal</a>-->
                </div>
                <div class="card-footer text-muted">
                    Sighted at {{sightingTime}}
                </div>
            </div>


        {{/each}}

    {{else}}
<!--        <p class="text-center">Record a new sighting.</p>-->
